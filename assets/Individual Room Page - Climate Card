    cards:
      - type: custom:streamline-card
        template: title_card
        variables:
          title: Climate Control
      - type: custom:mushroom-chips-card
        chips:
          - type: conditional
            conditions:
              - condition: numeric_state
                entity: sensor.climate_runtime_living_room
                above: 0
            chip:
              type: template
              entity: sensor.climate_runtime_living_room
              icon: mdi:chart-areaspline
              content: >-
                {% set val = states('sensor.climate_runtime_living_room') |
                float(0) %} {% set hours = val | int %} {% set minutes = ((val -
                hours) * 60) | round(0) | int %} {{ hours }}h {{ minutes }}m
          - type: template
            entity: sensor.living_area_humidity
            icon: mdi:water-percent
            content: >-
              {% set hum = states('sensor.living_area_humidity') | float(0) %}
              {{ hum }}% - {% if hum < 31 %}
                Dry
              {% elif hum < 51 %}
                Good
              {% else %}
                Humid
              {% endif %}
            icon_color: >-
              {% set hum = states('sensor.living_area_humidity') | float(0) %}
              {% if hum < 31 %}
                #99332d
              {% elif hum < 51 %}
                #228B22
              {% else %}
                #99332d
              {% endif %}
        alignment: end
        card_mod:
          style: |
            ha-card {
              margin-top: 1.6em
            }
